<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5_sunny"
    tools:context="com.example.patrickc.workweather.Menu_Login">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/room_background">

        <RelativeLayout
            android:id="@+id/buttonScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#80FFFFFF">

            <RelativeLayout
                android:id="@+id/viewScreen"
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="238dp">

                <Button
                    android:id="@+id/fingerprint"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/enter"
                    android:text="Finger" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/enter"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Enter" />

                <TextView
                    android:id="@+id/idScreen"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/enter"
                    android:background="@drawable/text_background"
                    android:gravity="center"
                    android:text="123456"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buttons1_5"
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/viewScreen"
                android:layout_below="@+id/viewScreen">

                <Button
                    android:id="@+id/number3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="3" />

                <Button
                    android:id="@+id/number4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/number3"
                    android:text="4" />

                <Button
                    android:id="@+id/number5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="5" />

                <Button
                    android:id="@+id/number2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/number1"
                    android:text="2" />

                <Button
                    android:id="@+id/number1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buttons6_00"
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/buttons1_5"
                android:layout_below="@+id/buttons1_5">

                <Button
                    android:id="@+id/number6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="6" />

                <Button
                    android:id="@+id/number7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/number6"
                    android:text="7" />

                <Button
                    android:id="@+id/number8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/number7"
                    android:text="8" />

                <Button
                    android:id="@+id/number9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/number8"
                    android:text="9" />

                <Button
                    android:id="@+id/number0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="0" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
